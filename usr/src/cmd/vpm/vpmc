set -- `getopt mrcxs:l:i:o: $*`
if [ $? != 0 ]
then
	echo "vpmc: usage" >&2
	exit 2
fi
echo $* >&2
AWK=awk
ofile="a.out"
intfile="bisync"
pp=/lib/cpp
for i in $*
do
case $i in
-m)
pp=m4
shift
;;
-r)
ropt=true
shift
;;
-c)
copt=true
shift
;;
-x)
xopt=true
shift
;;
-i)
intfile=$2
shift
shift
;;
-l)
lfile=$2
shift
shift
;;
-o)
ofile=$2
shift
shift
;;
-s)
sfile=$2
shift
shift
;;
--)
shift
break
;;
esac
done
if
test -z "$1"
then
echo "vpmc: no source file" >&2
exit 3
fi
infile=$1
v=/usr/lib/vpm
if
test -n "$ropt"
then
$pp $infile| $v/vratfor
else
>sas_tempb
$pp $infile | $v/vratfor | $v/pl | $AWK -f $v/pass0 > /tmp/sas_ta$$
cat sas_tempb /tmp/sas_ta$$  |  /lib/cpp > /tmp/sas_tb$$
if
test -n "$sfile"
then
cp /tmp/sas_tb$$ $sfile
fi
if
test -n "$lfile"
then
$AWK -f $v/pass1a /tmp/sas_tb$$ > $lfile
fi
if
test -z "$copt"
then
# $AWK -f $v/pass1 /tmp/sas_tb$$|$AWK -f $v/pass2 - /tmp/sas_tb$$ > sas_tempc
$AWK -f $v/pass1 /tmp/sas_tb$$ > /tmp/sas_tc$$
$AWK -f $v/pass2 /tmp/sas_tc$$ /tmp/sas_tb$$ > sas_tempc
/lib/cpp -I. $v/$intfile/main.s|kasb -o $ofile
if
test -z "$xopt"
then
rm sas_tempc
fi
rm /tmp/sas_tc$$
fi
if
test -z "$xopt"
then
rm sas_tempb
else
cp /tmp/sas_ta$$ sas_tempa
cp /tmp/sas_tb$$ sas_tempd
fi
rm /tmp/sas_ta$$ /tmp/sas_tb$$
fi
